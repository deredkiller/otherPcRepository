<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:orientation="vertical">



    <Switch
        android:id="@+id/backgroundMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מוזיקת רקע"
        android:layout_marginTop="50dp"
        android:checked="true"/>
    <Switch
        android:id="@+id/backgroundMusicInGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מוזיקת רקע"
        android:layout_marginTop="50dp"
        android:checked="true"/>

    <Switch
        android:id="@+id/scoreDataSaving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שמירת נתונים אוטומתית"
        android:layout_marginTop="20dp"
        android:checked="true"/>

    <Switch
        android:id="@+id/audioTaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אפקטים שמע"
        android:layout_marginTop="20dp"
        android:checked="true"/>

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="איפוס משחק" />


</LinearLayout>