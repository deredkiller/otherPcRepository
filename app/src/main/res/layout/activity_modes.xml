<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modesActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FADEB6"
    >


    <Button
        android:id="@+id/btnNormalMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_boarder"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="רגיל" />

    <Button
        android:id="@+id/btnDungeonMode"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_boarder"
        android:layout_weight="1"
        android:text="צינוק" />

    <Button
        android:id="@+id/btnGrowingMode"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_boarder"
        android:layout_weight="1"
        android:text="חורים משתכפלים" />

    <Button
        android:id="@+id/btnHardcoreMode"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_boarder"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="קשה" />
</LinearLayout>